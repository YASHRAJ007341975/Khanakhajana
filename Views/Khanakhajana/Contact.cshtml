
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@await Html.PartialAsync("Header")

<div class=" mx-64 bg-white rounded-lg overflow-hidden border border-2 w-50">
    <div class="p-4 sm:p-6">
        <h2 class="text-xl font-semibold text-gray-800">Contact Form</h2>
        <form action="https://formsubmit.co/yashrajvekariya007@gmail.com" method="POST">
            <div class="mt-4">
                <label for="Name" class="block text-lg font-medium text-gray-700">Your name</label>
                <input type="text" id="Name" name="Name" class="mt-1 block px-1 w-full py-2 border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm  text-lg" required>
            </div>
            <div class="mt-4">
                <label for="Email" class="block text-lg font-medium text-gray-700">Your email address</label>
                <input type="email" id="Email" name="Email" class="mt-1 px-2 block w-full py-2 border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" required>
            </div>
            <div class="mt-4">
                <label for="Message" class="block text-lg font-medium text-gray-700">Your message</label>
                <textarea id="Message" name="Message" class="mt-1 px-2 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" rows="6" maxlength="3000" required></textarea>
            </div>
            <div class="mt-4">
                <button type="submit" id="fcf-button" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Send Message</button>
            </div>
        </form>
    </div>
</div>

@await Html.PartialAsync("Footer")
